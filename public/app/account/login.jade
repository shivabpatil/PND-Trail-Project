.container-fluid
  .form(name="loginForm")
    .row
      .col-md-6.col-md-offset-3
        .form-group
          label(for="email") Email
          input.form-control(placeholder="Email", ng-model="user.email")
        .form-group
          label(for="password") Password
          input.form-control(type="password", placeholder="password", ng-model="user.password")
        .form-group
          button.btn.btn-primary.btn-block(ng-click="loginUser(user)") Submit
