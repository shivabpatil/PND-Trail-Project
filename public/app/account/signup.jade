.container-fluid
  .form(name="signupForm")
    .row
      .col-md-6.col-md-offset-3
        .form-group
          label(for="name") Name
          input.form-control(placeholder="Name", ng-model="user.name")
        .form-group
          label(for="email") Email
          input.form-control(placeholder="Email", ng-model="user.email")
        .form-group
          label(for="password") Password
          input.form-control(type="password", placeholder="password", ng-model="user.password")
        
        .form-group
          button.btn.btn-primary.btn-block(ng-click="signupUser(user)") Login
